PROMPT --------------CREATE TRIGGERS--------------;
--CREATE TRIGGERS
CREATE OR REPLACE TRIGGER TRIGGER_AUDIT_LANGUAGES
AFTER INSERT OR UPDATE OR DELETE ON T_LANGUAGES
FOR EACH ROW
DECLARE
BEGIN
  IF INSERTING THEN
    INSERT INTO AUDIT_LANGUAGES(LANGUAGE_ID, CREATED_DATE_TIME, UPDATED_DATE_TIME) 
    VALUES(:NEW.LANGUAGE_ID, TO_CHAR(CURRENT_DATE, 'HH24:MI:SS DD-MM-YYYY'), TO_CHAR(CURRENT_DATE, 'HH24:MI:SS DD-MM-YYYY'));
  ELSIF UPDATING OR DELETING THEN
    INSERT INTO AUDIT_LANGUAGES(LANGUAGE_ID, UPDATED_DATE_TIME) 
    VALUES(:NEW.LANGUAGE_ID, TO_CHAR(CURRENT_DATE, TO_CHAR(CURRENT_DATE, 'HH24:MI:SS DD-MM-YYYY')));
  END IF;
  COMMIT;
END;
/

CREATE OR REPLACE TRIGGER TRIGGER_AUDIT_PART_OF_SPEECHES
AFTER INSERT OR UPDATE OR DELETE ON T_PART_OF_SPEECHES
FOR EACH ROW
DECLARE
  
BEGIN
  IF INSERTING THEN
    INSERT INTO AUDIT_PART_OF_SPEECHES (PART_OF_SPEECH_ID, CREATED_DATE_TIME, UPDATED_DATE_TIME) 
    VALUES(:NEW.PART_OF_SPEECH_ID, TO_CHAR(CURRENT_DATE, 'HH24:MI:SS DD-MM-YYYY'), TO_CHAR(CURRENT_DATE, 'HH24:MI:SS DD-MM-YYYY'));
  ELSIF UPDATING OR DELETING THEN
    INSERT INTO AUDIT_PART_OF_SPEECHES (PART_OF_SPEECH_ID, UPDATED_DATE_TIME) 
    VALUES(:OLD.PART_OF_SPEECH_ID, TO_CHAR(CURRENT_DATE, 'HH24:MI:SS DD-MM-YYYY'));  
  END IF;
  COMMIT;
END;
/

