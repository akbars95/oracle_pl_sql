CREATE OR REPLACE TRIGGER TRIGGER_AUDIT_WORDS
AFTER INSERT OR UPDATE OR DELETE ON T_WORDS
FOR EACH ROW
DECLARE
  
BEGIN
  IF INSERTING THEN
    INSERT INTO AUDIT_WORDS (WORD_ID, CREATED_DATE_TIME, UPDATED_DATE_TIME) 
    VALUES(:NEW.WORD_ID, TO_CHAR(CURRENT_DATE, 'HH24:MI:SS DD-MM-YYYY'), TO_CHAR(CURRENT_DATE, 'HH24:MI:SS DD-MM-YYYY'));
  ELSIF UPDATING OR DELETING THEN
    INSERT INTO AUDIT_WORDS (WORD_ID, UPDATED_DATE_TIME) 
    VALUES(:OLD.WORD_ID, TO_CHAR(CURRENT_DATE, 'HH24:MI:SS DD-MM-YYYY'));  
  END IF;
  COMMIT;
END;